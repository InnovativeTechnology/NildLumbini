<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ourproject.nildlumbini.FullDetailView">

    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/title2"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:text="Title"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_below="@+id/l4"
                android:layout_width="fill_parent"
                android:id="@+id/image2"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_below="@+id/image2"
                android:text="blah blah blah blah blah blah blah blah blah blah blah blah"
                android:layout_width="match_parent"
                android:id="@+id/article2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="17dp"/>
            <TextView
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:text="Ramesh Pokhrel Wrotes "
                android:gravity="right"
                android:id="@+id/name2"
                android:layout_below="@+id/article2"
                android:textColor="@color/back"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="17sp"
                android:text=" option "
                android:layout_gravity="center"
                android:layout_width="148dp"
                android:id="@+id/option2"
                android:gravity="left"
                android:textColor="@color/back"
                android:layout_below="@+id/name2"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/date2"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_below="@+id/name2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
