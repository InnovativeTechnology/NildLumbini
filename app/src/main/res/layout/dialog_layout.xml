<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#993F51B5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/title1"
            android:layout_alignEnd="@+id/title1">
            <TextView
                android:id="@+id/closePopup"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="10.11"
                android:background="?selectableItemBackground"
                android:drawableTop="@drawable/close"
                android:gravity="center"
                android:text="Close"
                android:textColor="@color/close" />
        </LinearLayout>

        <EditText
            android:id="@+id/title1"
            android:hint="Title here...."
            android:maxLines="1"
            android:textColorHint="#000000"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:backgroundTint="#e2e2e4"
            android:layout_width="match_parent"
            android:background="@drawable/check"
            android:layout_height="40dp" />


        <Spinner
            android:layout_below="@+id/title1"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:background="@drawable/check"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#e2e2e4"
            android:id="@+id/option"
            android:hint="option"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/article"
            android:hint="article Description here..."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#e2e2e4"
            android:gravity="center"
            android:background="@drawable/check"
            android:textColorHint="#000000"
            android:minLines="6"
            android:layout_below="@+id/option"
            android:layout_height="match_parent" />
        <ImageButton
            android:layout_width="match_parent"
            android:src="@drawable/default2"
            android:id="@+id/selectImage"
            android:scaleType="fitCenter"
            android:layout_below="@id/article"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:layout_height="200dp" />


        <Button
            android:id="@+id/addButton"
            android:hint="Add Item"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="#e2e2e4"
            android:layout_below="@+id/selectImage"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </RelativeLayout>
</ScrollView>