    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/www">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/l45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/title"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:gravity="left"
                android:text="Title"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <ImageView
            android:layout_below="@+id/l45"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_below="@+id/image"
            android:text="blah blah blah blah blah blah blah blah blah blah blah blah"
            android:layout_width="match_parent"
            android:id="@+id/article"
            android:layout_marginLeft="2dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:text="Ramesh Pokhrel Wrotes "
            android:gravity="right"
            android:id="@+id/name"
            android:layout_below="@+id/article"
            android:textColor="@color/back"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="17sp"
            android:text=" option "
            android:layout_gravity="center"
            android:layout_width="148dp"
            android:id="@+id/option"
            android:gravity="left"
            android:textColor="@color/back"
            android:layout_below="@+id/name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="date"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_below="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/www"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                 android:padding="8dp"
                android:layout_weight="2">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/edt"
                android:src="@drawable/ic_border_color_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_toRightOf="@id/edt"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:padding="8dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/dlt"
                android:src="@drawable/ic_delete_forever_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_toRightOf="@id/dlt"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"/>

        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>